#include  <iostream>

class Matrix {
public:
    Matrix (): m_row(0), m_col(0), m_matrix(nullptr) {
        std::cout << __func__ << std::endl;
    }
    Matrix (const int row, const int col): m_row(row), m_col(col) {
        m_matrix = new int*[]{};
        for (int i = 0; i < row; ++i) {
            m_matrix[i] = new int[col]{};
        }
        std::cout << __func__ << std::endl;
    }
    void setRow(const int row): m_row(row){};
    void getRow() const {
        std::cout << "Matrix row = " << m_row << std::endl;
    }
    void setCol(const int col): m_col(col){};
    void getCol() const {
        std::cout << "Matrix col = " << m_col << std::endl;
    }
    void init() {
        for (int i = 0; i < m_row; ++i) {
            for (int j = 0; j < m_col; ++j) {
                m_matrix[i][j] = i * m_col + j + 1;
            }
        }
    }
    void print() const {
        for (int i = 0; i < m_row; ++i) {
            for (int j = 0; j < m_col; ++j) {
                std::cout << m_matrix[i][j] << ' ';
            }
            std::cout << std::endl;
        }
    }
    ~Matrix() {
        for (int i = 0; i < m_row; ++i) {
            delete[] m_matrix[i];
        }
        delete[] m_matrix;
        std::cout << __func__ << std::endl;
    }
private:
    int m_row;
    int m_col;
    int **m_matrix;
};
int main() {
    Matrix A;
    Matrix B(5, 10);
    A.setRow(10);
    A.setCol(10);
    B.init();
    B.getCol();
    B.getRow();
    B.print();
    return 0;
}
