#include  <iostream>
#include <string>

class Car {
public:
    Car();

    Car (const std::string& brand, const std::string& model, int year)
        : m_brand(brand), m_model(model), m_year(year), m_speed(0) {
        std::cout << __func__ << std::endl;
    }

    void start() {
        std::cout << m_brand << " " << m_model << " started." << std::endl;
    }

    void accelerate(int amount) {
        m_speed += amount;
        std::cout << m_model << " accelerated to " << m_speed << " km/h." << std::endl;
    }

    void brake(int amount) {
        if (m_speed - amount < 0)
            m_speed = 0;
        else
            m_speed -= amount;
        std::cout << m_model << " slowed down to " << m_speed << " km/h." << std::endl;
    }

    void getInfo() const {
        std::cout << "Car: " << m_brand << " " << m_model << ", " <<m_year << ", Speed: " << m_speed << " km/h" << std::endl;
    }

    void stop() {
        m_speed = 0;
        std::cout << m_model << " stopped." << std::endl;
    }

private:
    std::string m_brand;
    std::string m_model;
    int m_year;
    int m_speed;
};

int main() {
    Car myCar("Audi", "Rs6", 2024);
    myCar.start();
    myCar.accelerate(90);
    myCar.brake(20);
    myCar.getInfo();
    myCar.stop();
    return 0;
}
